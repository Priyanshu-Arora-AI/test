
pipeline {
    agent {
        label 'slave'
    }

    stages {

        stage('Parallel Setup and Configure') 
    {
            parallel {
        stage('setup') {
            agent { label 'docker' }
            steps {
                sh 'echo " hii i am docker setup stage"  '
                sh 'touch /home/test '
                sh '/usr/sbin/httpd  &> /home/test '
                sh 'cp index.html /var/www/html '
                sh 'curl 127.0.0.1 '
                sh 'sleep 180 '

            }
        }
        
        stage('configure') {
             agent {
        label 'slave'
                }
            steps {
                echo " hii i am configure stage"
                sh 'sleep 50 '

                sh 'watch -n 1 "curl 192.168.1.7" '
                // sudo setenforce 0
                // sudo systemctl stop firewalld
                // sudo yum install httpd -y
            }
        }
            
    }
    }
        
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}